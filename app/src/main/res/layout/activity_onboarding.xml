<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C9EF63"
    tools:context=".onboarding">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="500px"
        android:layout_gravity="center"
        android:background="@drawable/rumah"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntubold"
        android:textColor="@color/black"
        android:layout_marginTop="450px"
        android:layout_marginLeft="60px"
        android:textSize="120px"
        android:text="The Aparkost ">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bondieoutline"
        android:layout_marginTop="10px"
        android:layout_marginLeft="60px"
        android:textColor="@color/black"
        android:textSize="170px"
        android:text="PADIGREEN RESORT">

    </TextView>

    <ImageView
        android:layout_width="950px"
        android:layout_height="3dp"
        android:layout_marginTop="25px"
        android:layout_marginLeft="60px"
        android:background="@drawable/line" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginLeft="60px"
        android:textColor="@color/black"
        android:textSize="30px"
        android:text="ig : @padigreenresort">

    </TextView>
    <TextView
        android:id="@+id/skip"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_marginLeft="300dp"
        android:background="@drawable/skip"
        android:fontFamily="@font/montserratmedium"
        android:padding="20px"
        android:textSize="40px"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Skip"/>

</LinearLayout>